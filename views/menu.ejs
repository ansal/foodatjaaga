<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Food @ Jaaga</title>
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <style>
    body {
      margin-top: 70px;
    }
  </style>
</head>

<body>

  {{ include menus }}

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <h3>Add Food Menu</h3>
        <div class="alert alert-danger" id="addMenuError" style="display:none">
          <strong>Error: </strong> Please enter both fields!
        </div>
        <div class="col-md-4">
          <select id="when" class="form-control">
            <option value="0">Select Type</option>
            <option value="breakfast">Breakfast</option>
            <option value="lunch">Lunch</option>
            <option value="snacks">Snacks</option>
            <option value="dinner">Dinner</option>
          </select>
        </div>
        <div class="col-md-4">
          <select id="food" class="form-control">
            <option value="0">Select Food</option>
            {{ for(var i = 0; i < foods.length; i++) { }}
            <option value="{{= foods[i]._id }}">{{= foods[i].title }}</option>
            {{ } }}
          </select>
        </div>
        <div class="col-md-4">
          <button class="btn btn-success" id="addMenuButton">Add</button>
        </div>
        <hr>
      </div> <!-- col-md-12 -->
    </div> <!-- row -->
    <div class="row">
      <div class="col-md-12">
        <hr>
      </div>
      <div class="col-md-3">
        <h3>Breakfast</h3>
        {{ if(breakfasts.length === 0) { }}
        <div class="alert alert-danger">
          No breakfast added for today
        </div>
        {{ } }}
        {{ for(var i = 0; i < breakfasts.length; i++) { }}
          <img src="{{= breakfasts[i]._food.imgUrl }}" alt="" class="img-responsive">
          <h4>{{= breakfasts[i]._food.title }}</h4>
          <hr>
        {{ } }}
      </div>
      <div class="col-md-3">
      <h3>Lunch</h3>
        {{ if(lunchs.length === 0) { }}
        <div class="alert alert-danger">
          No lunch added for today
        </div>
        {{ } }}
        {{ for(var i = 0; i < lunchs.length; i++) { }}
          <img src="{{= lunchs[i]._food.imgUrl }}" alt="" class="img-responsive">
          <h4>{{= lunchs[i]._food.title }}</h4>
          <hr>
        {{ } }}
      </div>
      <div class="col-md-3">
        <h3>Snacks</h3>
        {{ if(snacks.length === 0) { }}
        <div class="alert alert-danger">
          No snacks added for today
        </div>
        {{ } }}
        {{ for(var i = 0; i < snacks.length; i++) { }}
          <img src="{{= snacks[i]._food.imgUrl }}" alt="" class="img-responsive">
          <h4>{{= snacks[i]._food.title }}</h4>
          <hr>
        {{ } }}
      </div>
      <div class="col-md-3">
      <h3>Dinner</h3>
        {{ if(dinners.length === 0) { }}
        <div class="alert alert-danger">
          No dinner added for today
        </div>
        {{ } }}
        {{ for(var i = 0; i < dinners.length; i++) { }}
          <img src="{{= dinners[i]._food.imgUrl }}" alt="" class="img-responsive">
          <h4>{{= dinners[i]._food.title }}</h4>
          <hr>
        {{ } }}
      </div>
    </div> <!-- row -->
    {{ include footer.ejs }}
  </div> <!-- container-fluid -->

  <script src="/assets/js/jquery.min.js"></script>
  <script src="/assets/js/bootstrap.min.js"></script>
  <script src="/assets/js/menu.js"></script>

</body>
</html>